                android:layout_height="0dp"
                android:layout_weight="8">

                <TextView
                    android:id="@+id/textGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="GRID LAYOUT"
